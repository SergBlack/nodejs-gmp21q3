    "eslint-plugin-import": "^2.22.1",
    "husky": "^7.0.2",
    "jest": "^27.4.5",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.3.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
