  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts,.js,.mjs --fix",
    "task1_1": "nodemon modules/module_1/task1_1.mjs",
    "task1_2": "nodemon modules/module_1/task1_2.mjs",
    "start": "npm run build && node build/index.js",
    "start:dev": "nodemon -r dotenv/config --ext js,ts --watch . --ignore build/ server.ts ",
