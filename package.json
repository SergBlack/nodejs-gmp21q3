    "watch-compile": "rimraf ./build && npx babel . --extensions .ts --out-dir build --watch",
    "watch-types": "tsc --watch",
    "start:watch": "concurrently \"npm:watch-types\" \"npm:watch-compile\"",
    "prepare": "husky install"
  },
